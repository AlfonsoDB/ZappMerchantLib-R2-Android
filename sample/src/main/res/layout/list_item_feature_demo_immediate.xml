<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    style="@style/CardViewStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/feature_demo_list_item_horizontal_margin"
    android:layout_marginRight="@dimen/feature_demo_list_item_horizontal_margin"
    android:layout_marginTop="@dimen/feature_demo_list_item_vertical_margin">

    <LinearLayout
        android:id="@+id/card_container_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_immediate_background"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="@dimen/feature_demo_list_item_margin">

        <TextView
            android:id="@+id/feature_demo_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/feature_demo_list_item_title_font_size"
            tools:text="Feature demo title" />
    </LinearLayout>

</android.support.v7.widget.CardView>
