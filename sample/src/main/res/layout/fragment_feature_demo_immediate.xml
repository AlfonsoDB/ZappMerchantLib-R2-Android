<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.co.zapp.samplezappmerchantapp.FeatureDemoActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="@dimen/feature_details_card_margin"
        card_view:cardCornerRadius="@dimen/feature_demo_list_card_corner_radius"
        card_view:cardElevation="@dimen/feature_demo_list_card_elevation"
        card_view:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/feature_demo_list_item_vertical_margin"
                android:paddingLeft="@dimen/feature_demo_list_item_horizontal_margin"
                android:paddingRight="@dimen/feature_demo_list_item_horizontal_margin"
                android:paddingTop="@dimen/feature_demo_list_item_vertical_margin">

                <TextView
                    android:id="@+id/title_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/feature_demo_title_margin"
                    android:textSize="@dimen/feature_demo_title_font_size"
                    android:textColor="@color/material_text_color_primary"
                    tools:text="Feature Title" />

                <TextView
                    android:id="@+id/description_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/feature_demo_description_margin"
                    android:textSize="@dimen/feature_demo_description_font_size"
                    tools:text="Select 'Pay by Bank app' to begin a Bill Pay payment" />

                    <TextView
                        android:id="@+id/bill_reference"
                        style="@style/FeatureDemoImmediateDetails"
                        android:layout_marginBottom="@dimen/feature_demo_immediate_details_margin_bottom" />

                    <TextView
                        android:id="@+id/email"
                        style="@style/FeatureDemoImmediateDetails" />

                    <TextView
                        android:id="@+id/consumer_name"
                        style="@style/FeatureDemoImmediateDetails" />

                    <TextView
                        android:id="@+id/address_line_1"
                        style="@style/FeatureDemoImmediateDetails" />

                    <TextView
                        android:id="@+id/address_line_2"
                        style="@style/FeatureDemoImmediateDetails" />

                    <TextView
                        android:id="@+id/address_line_3"
                        style="@style/FeatureDemoImmediateDetails" />

                    <TextView
                        android:id="@+id/address_line_4"
                        style="@style/FeatureDemoImmediateDetails" />

                    <TextView
                        android:id="@+id/address_line_5"
                        style="@style/FeatureDemoImmediateDetails" />

                    <TextView
                        android:id="@+id/address_line_6"
                        style="@style/FeatureDemoImmediateDetails" />

                    <TextView
                        android:id="@+id/post_code"
                        style="@style/FeatureDemoImmediateDetails" />

                    <TextView
                        android:id="@+id/country_code"
                        style="@style/FeatureDemoImmediateDetails" />

                <TextView
                    android:id="@+id/amount_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/feature_demo_immediate_amount_padding"
                    android:layout_marginBottom="@dimen/feature_demo_immediate_amount_padding"
                    android:textSize="@dimen/feature_demo_immediate_amount_text_size"
                    android:textColor="@color/material_text_color_primary"
                    tools:text="Â£15.50" />

                <FrameLayout
                    android:id="@+id/initiate_payment_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/feature_demo_fab_margin"
        android:src="@drawable/fab_edit"
        app:borderWidth="@dimen/feature_demo_fab_border_width"
        app:elevation="@dimen/feature_demo_fab_elevation"
        app:fabSize="normal"
        app:layout_anchorGravity="bottom|right|end"
        app:pressedTranslationZ="@dimen/feature_demo_fab_pressed_translation_z" />

</RelativeLayout>

