<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Apps palette colors. -->
        <item name="colorPrimary">@color/material_color_primary</item>
        <item name="colorPrimaryDark">@color/material_color_primary_dark</item>
        <item name="colorAccent">@color/material_color_accent</item>
        <item name="android:textColorPrimary">@color/material_text_color_primary</item>
        <item name="android:textColorSecondary">@color/material_text_color_secondary</item>

        <item name="android:windowBackground">@color/material_window_background</item>

        <!-- This is required for the Pay by Bank app popup dialog to be displayed correctly. -->
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorControlNormal">@color/material_text_color_secondary</item>
        <item name="colorControlActivated">@color/material_color_accent</item>
        <item name="colorControlHighlight">@color/material_color_accent</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/feature_demo_list_item_title_font_size</item>
        <item name="android:textColor">@color/material_tab_text_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/material_tab_indicator_color</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/material_selected_text_color</item>
        <item name="android:background">@color/material_tab_background</item>
    </style>

    <style name="EditableAttribute" />

    <style name="EditableAttribute.Input">
        <item name="android:textSize">@dimen/feature_edit_input_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/feature_edit_input_layout_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">start</item>
    </style>

    <style name="AddressLineInput" parent="EditableAttribute.Input">
        <item name="android:maxLength">35</item>
    </style>

    <style name="EditableAttributeDeferred" parent="EditableAttribute.Input">
        <item name="android:textSize">@dimen/feature_edit_input_text_size</item>
        <item name="android:paddingTop">@dimen/fragment_feature_demo_divider_margin_top</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Deferred.Input" parent="EditableAttributeDeferred">
        <item name="android:maxLength">35</item>
    </style>

    <style name="Deferred.AddressLineInput" parent="Deferred.Input">
        <item name="android:maxLength">35</item>
    </style>

    <style name="EditableAttribute.Divider">
        <item name="android:layout_height">@dimen/fragment_feature_demo_divider_height</item>
        <item name="android:layout_marginTop">@dimen/fragment_feature_demo_divider_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/fragment_feature_demo_divider_margin_bottom</item>
        <item name="android:background">@color/fragment_feature_demo_divider_background</item>
    </style>

    <style name="EditCancelButton" parent="EditAddressButton">
        <item name="textAllCaps">false</item>
    </style>

    <style name="EditAddressButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/material_color_primary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="FeatureItemTextView" parent="android:Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:textSize">@dimen/feature_demo_list_item_title_font_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/material_text_color_primary</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">@dimen/feature_demo_list_card_corner_radius</item>
        <item name="cardElevation">@dimen/feature_demo_list_card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="FeatureDemoImmediateDetails" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/feature_demo_immediate_info_margin_right</item>
        <item name="android:textSize">@dimen/feature_demo_description_font_size</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/material_text_color_primary</item>
    </style>

</resources>
